---
import FormattedDate from "./FormattedDate.astro";

export interface Props {
  url: string;
  image: string | undefined;
  title: string | undefined;
  date: Date | undefined;
  tags: string[] | undefined;
}

const { url, image, title, date, tags } = Astro.props;
---

<article class="h-auto rounded-lg border |border-gray-200">
  <a href={`/blog/${url}/`}>
    <img width={720} height={360} src={image} alt="" />
    <div class="flex flex-col px-4 py-3">
      <h4 class="text-2xl font-bold">{title}</h4>
      <p class="date">
        <FormattedDate date={date} />
      </p>
      <ul class="flex flex-wrap">
        {
          tags &&
            tags.map((tag) => (
              <li class="mr-2 mt-2 whitespace-nowrap rounded-full bg-purple-100 px-2.5 py-0.5 text-sm text-purple-700">
                {tag}
              </li>
            ))
        }
      </ul>
    </div>
  </a>
</article>
